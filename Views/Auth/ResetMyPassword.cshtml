@model ResetMyPasswordModel

@{
    Layout = "/Views/Shared/_LayoutFullPage.cshtml";
    ViewBag.Title = "Reset My Password";
    ViewData["Title"] = "Reset My Password Validation";
}

<input type="hidden" id="Message" Name="Message" value="@Model.Message" />
<input type="hidden" id="Icon" Name="Icon" value="@Model.Icon" />

<script>
    $(document).ready(function () {
        Swal.fire({
            icon: $('#Icon').val(),
            title: $('#Message').val(),
            showConfirmButton: true,
            confirmButtonText: "Ok, got it!",
        }).then(function () {
            $('.custom-loader-wrapper').css('display', 'flex');
            window.location = contentUrl + "/Home/Index";
        });
    });
</script>