    <style>
        .featured__title{
            font-size:25px;
        }
        .featured__price{
            font-size:15px;
        }
         .featured__tag{
            font-size:15px;
            font-weight: bold;
        }


        /* Make the image fill the container while maintaining aspect ratio */
        .story__img {
            width: 100%;
            height: 100%;
            margin-left: 2px;
            margin-top: 115px;
            border-radius: 25px;
            padding: 10px;
        }

        .story__data{
            margin-left: 40px;
        }

