<script>
$(document).ready(function () {
    function initializeDataTable(url) {
        $('#kt_table_users').DataTable({
            // datasource definition
            serverSide: true, // Enable server-side processing
            processing: true, // Show loading indicator

            ajax: {
                url: url, // Use the provided URL
                type: 'POST', // Use HTTP POST method
                dataType: 'json',
                error: function (xhr, errorText, errorType) {
                    console.log('AJAX Error: ' + errorText + ' (' + errorType + ')');
                }
            },

            // column definitions (you can customize these as needed)
            columns: [
                {
                    data: 'Name',
                    title: 'Name',
                    sortable: true,
                    render: function (data) {
                        return '<a class="modal-user-master-data" data-toggle="modal" data-target="" data-id="' + data.userId + '" href="#kt_table_users">' + data.name + '</a>';
                    }
                }, {
                    data: 'Email',
                    title: 'Email',
                    width: '200px',
                    sortable: true,
					template: function (data){
						return data.email;
					}
                }, {
                    data: 'Access',
                    title: 'Access',
                    sortable: true,
					template: function (data){
						return data.access;
					}
                }, {
                    data: 'Status',
                    title: 'Status',
                    sortable: true,
					template: function (data){
						return data.status;
					}
                }, {
                    data: 'Role',
                    title: 'Role',
                    sortable: true,
					template: function (data){
						return data.role;
					}
                }
            ],

            // layout definition
            scrollX: false,
            paging: true,
            searching: true,
            pageLength: 5,
            lengthMenu: [5, 10, 20],
            info: true,
        });
    }

    // Initialize DataTable with the original URL
    initializeDataTable('/UserMaster/GetDataUserMaster');
});

</script>

					