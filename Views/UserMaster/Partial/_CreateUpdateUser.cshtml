@model Pitstop.Models.CreateUpdateUserMasterDataModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">

        <!-- Modal-->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel" name="exampleModalLabel">Create User</h5>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card card-custom">
                                    <form>

                                        <input type="hidden" asp-for="UserId" id="UserId" name="UserId" />

                                        <div class="card-body">
                                            <div class="form-group row">
                                                <label class="modal-label col-lg-3 col-form-label text-lg-right">User Name</label>
                                                <div class="col-lg-5">
                                                    <input type="text" class="modal-input form-control" asp-for="UserName" name="UserName" id="UserName" placeholder="User Name..." />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="modal-label col-lg-3 col-form-label text-lg-right">Full Name</label>
                                                <div class="col-lg-5">
                                                    <input type="text" class="modal-input form-control" asp-for="FullName" name="FullName" id="FullName" placeholder="Full Name..." />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="modal-label col-lg-3 col-form-label text-lg-right">Email Id</label>
                                                <div class="col-lg-5">
                                                    <input type="text" class="modal-input form-control" asp-for="EmailId" placeholder="Email Id..." />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="modal-label col-lg-3 col-form-label text-lg-right">Mobile Number</label>
                                                <div class="col-lg-5">
                                                    <input type="text" class="modal-input form-control" asp-for="MobileNumber" placeholder="Mobile Number..." />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                @*<label class="col-lg-3 col-form-label text-lg-right">Access Type</label>
                                                <div class="col-lg-4">
                                                    <select class="form-control select2" asp-for="AccessTypeId" id="AccessTypeId" name="AccessTypeId"></select>
                                                </div>*@
                                                <label class="modal-label col-lg-3 col-form-label text-lg-right">Access Type</label>
                                                <div class="col-lg-4">
                                                    <select class="modal-input form-control select2" id="kt_select2_access_type_list" name="param" multiple="multiple" style="width: 270px; z-index:10000;"></select>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label id="ResetPasswordDiv" class="col-lg-3 col-form-label text-lg-right"></label>
                                                <div class="col-lg-4">
                                                    <input type="button" class="btn btn-info mr-2" id="btn-reset-password"/>
                                                </div>
                                            </div>
                                            <div class="form-group row" id="IsActiveDiv">
                                                <label class="modal-label col-lg-3 col-form-label text-lg-right">Active?</label>
                                                <div class="col-lg-5 pt-2">
                                                    <label class="checkbox checkbox-lg">
                                                        <input type="checkbox" asp-for="IsActive" id="IsActive" name="IsActive" />
                                                        <span></span>
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="modal-label col-lg-3 col-form-label text-lg-right">System Application</label>
                                                <div class="col-lg-8">
                                                    <div class="checkbox-list">
                                                        @foreach (var app in ViewBag.Applications)
                                                        {
                                                            <label class="checkbox checkbox-square">
                                                                <input type="checkbox" name="ApplicationNames" value="@app.Name"
                                                                />
                                                                <span></span>
                                                                @app.Name
                                                            </label>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                                <div class="form-group row">
                                                    <label class="modal-label col-lg-3 col-form-label text-lg-right">Job Code</label>
                                                <div class="col-lg-8 mt-3">
                                                    <select class="modal-input form-control select2" id="kt_select2_jobcode_list" name="param" multiple="multiple" style="width: 270px; z-index:10000;">
                                                    </select>
                                                </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn-escape btn btn-light-primary font-weight-bold" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary font-weight-bold" id="btn-save-update-user">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
