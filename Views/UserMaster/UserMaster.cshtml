@await Html.PartialAsync("Partial/_LayoutUserMaster.cshtml")
@await Html.PartialAsync("Partial/_CreateUpdateUser.cshtml")
@{
    ViewData["Title"] = "Master User";
    Layout = "/Views/Shared/_LayoutDash.cshtml";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/management.css">
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-12">
            <div class="card card-custom" style="border-radius:0px">
                <div class="card-header d-flex justify-content-center">
                    <div class="card-title">
                        <h3 class="card-label d-flex justify-content-center">User Master</h3>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-7">
                        <div class="row align-items-center">
                            <div class="col-lg-12 col-xl-12">


                                <div class="row align-items-center mb-3">
                                    <div class="col-md-2 my-2 my-md-0">
                                        <label class="mr-3 mb-0 d-none d-md-block">Create User Master</label>
                                    </div>
                                    <div class="col-md-4 my-2 my-md-0">
                                        <div class="btn-group">
                                            <button type="button" data-toggle="modal" data-target="" data-id="" href="#exampleModal" class="btn btn-success modal-user-master-data-create">Create</button>
                                        </div>
                                    </div>
                                </div>


                                <div class="row align-items-center mb-5">
                                    <div class="col-md-2 my-2 my-md-0">
                                        <label class="mr-3 mb-0 d-none d-md-block">Search</label>
                                    </div>
                                    <div class="col-md-4 my-2 my-md-0">
                                        <div class="input-icon">
                                            <input type="text" class="form-control" placeholder="Search..." id="kt_datatable_search_query" />
                                            <span>
                                                <i class="flaticon2-search-1 text-muted"></i>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="col-md-2 my-2 my-md-0">
                                        <label class="mr-3 mb-0 d-none d-md-block">Role</label>
                                    </div>
                                    <div class="col-md-4 my-2 my-md-0">
                                        <div class="d-flex align-items-center">
                                            <select class="form-control form-others" id="kt_datatable_search_role" 
                                            asp-items="@(new SelectList(ViewBag.RoleList, "IdString", "Value", ViewBag.RoleList))"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row align-items-center mb-5">
                                    <div class="col-md-2 my-2 my-md-0">
                                        <label class="mr-3 mb-0 d-none d-md-block">Status</label>
                                    </div>
                                    <div class="col-md-4 my-2 my-md-0">
                                        <div class="d-flex align-items-center">
                                            <select class="form-control form-others" id="kt_datatable_search_status" 
                                            asp-items="@(new SelectList(ViewBag.StatusList, "IdInt", "Value", ViewBag.StatusList))"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="datatable datatable-bordered datatable-head-custom" id="kt_datatable"></div>
                </div>
            </div>
        </div>
    </div>
        <div class="d-flex justify-content-between">
        <button type="button" class=" back-btn btn btn-light-primary font-weight-bolder text-uppercase px-9 py-4" onclick="history.back()" data-wizard-type="action-prev">Back</button>
        </div>
}

@section Scripts{
<script src="~/list/list_user_master.js"></script>
<script src="~/js/dropdown-data.js"></script>
<script src="~/js/user-master-data.js"></script>
}